<?xml version="1.0"?>
<config>
    <tabs>
        <urber translate="label"  module="productfeed">
            <label>Urber</label>
            <sort_order>200</sort_order>
        </urber>
    </tabs>

    <sections>
        <productfeed_config translate="label" module="productfeed">
            <label>Product Feed</label>
            <tab>urber</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <cron translate="label">
                    <label>Feed Cache</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <cache_duration>
                            <label>Cache duration</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </cache_duration>
                    </fields>
                </cron>
                <section_two translate="label">
                    <label>Product Filter</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <category>
                            <label>Categories</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>productfeed/config_category</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </category>
                        <tag>
                            <label>Tags</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>productfeed/config_tag</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </tag>
                        <manufacturer>
                            <label>Manufacturers</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>productfeed/config_manufacturer</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </manufacturer>
                        <stock>
                            <label>Minimal Stock</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </stock>
                    </fields>
                </section_two>
            </groups>
        </productfeed_config>
    </sections>
</config>