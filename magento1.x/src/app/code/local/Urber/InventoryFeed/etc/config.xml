<?xml version="1.0"?>
<config>
	<modules>
		<Urber_InventoryFeed>
			<version>0.1.0</version>
		</Urber_InventoryFeed>
	</modules>

	<!-- FRONTEND -->

	<frontend>
		<routers>
			<inventoryfeed>
				<use>standard</use>
				<args>
					<module>Urber_InventoryFeed</module>
					<frontName>inventoryfeed</frontName>
				</args>
			</inventoryfeed>
		</routers>
		<layout>
			<updates>
				<inventoryfeed>
					<file>inventoryfeed.xml</file>
				</inventoryfeed>
			</updates>
		</layout>
	</frontend>

	<!-- GLOBAL -->

	<global>
		<helpers>
			<inventoryfeed>
				<class>Urber_InventoryFeed_Helper</class>
			</inventoryfeed>
		</helpers>
		<blocks>
			<inventoryfeed>
				<class>Urber_InventoryFeed_Block</class>
			</inventoryfeed>
		</blocks>
		<models>
			<inventoryfeed>
				<class>Urber_InventoryFeed_Model</class>
				<resourceModel>inventoryfeed_mysql4</resourceModel>
			</inventoryfeed>
		</models>
	</global>

	<!-- ADMIN -->

	<admin>
		<routers>
			<inventoryfeed>
				<use>admin</use>
				<args>
					<module>Urber_InventoryFeed</module>
					<frontName>admin_inventoryfeed</frontName>
				</args>
			</inventoryfeed>
		</routers>
	</admin>

	<adminhtml>
		<menu>
			<urber>
				<title>Urber</title>
				<sort_order>100</sort_order>
				<children>
					<inventoryfeedbackend module="inventoryfeed">
						<title>Inventory Feed</title>
						<sort_order>1</sort_order>
						<action>admin_inventoryfeed/adminhtml_inventoryfeedbackend</action>
					</inventoryfeedbackend>
				</children>
			</urber>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<inventoryfeed translate="title" module="inventoryfeed">
							<title>InventoryFeed</title>
							<sort_order>1000</sort_order>
							<children>
								<inventoryfeedbackend translate="title">
									<title>Urber Inventory Feed</title>
								</inventoryfeedbackend>
							</children>
						</inventoryfeed>
						<system>
							<children>
								<config>
									<children>
										<inventoryfeed_config>
											<title>Urber Inventory Feed Configuration</title>
										</inventoryfeed_config>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<inventoryfeed>
					<file>urber/inventoryfeed.xml</file>
				</inventoryfeed>
			</updates>
		</layout>
	</adminhtml>

	<!-- CRON -->

	<crontab>
		<jobs>
			<inventoryfeed_generatefeed>
				<schedule><cron_expr>0 * * * *</cron_expr></schedule>
				<run>
					<model>inventoryfeed/cron::generateFeed</model>
				</run>
			</inventoryfeed_generatefeed>
		</jobs>
	</crontab>
</config>